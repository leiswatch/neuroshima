{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
    },
    "rootDirs": [
      "src"
    ],
  },
  "include": [
    "src/**/*.ts"
  ]
}
